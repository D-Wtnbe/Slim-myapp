{% extends 'templates/app.twig' %}

{% block content %}
  <h1>ユーザー一覧</h1>
  <div class="container">
    <form class="form-inline">
      <div class="form-group">

        <div class="profile_list">
          <div class="container">
            <div class="table-responsive">
              <table class="table table-bordered">
                <theader>
                  <tr>
                    <th>名前</th>
                    <th>ユーザーID</th>
                    <th>メールアドレス</th>
                  </tr>
                </theader>
                <tbody>
                {% for user in users %}
                    <tr>
                      <td>
                        <a href="{{ path_for('auth.signup') }}> {{user.name}} </a>
                      </td>
                      <td> {{user.userid}} </td>
                      <td> {{user.email}} </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      {% endblock %}
